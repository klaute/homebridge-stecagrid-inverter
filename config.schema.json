{
  "pluginAlias": "StecaGridInverter",
  "pluginType": "platform",
  "singular": true,
  "schema": {
    "type": "object",
    "properties": {
      "name": {
        "title": "Name",
        "type": "string",
        "required": true,
        "default": "StecaGrid Inverter"
      },
      "Ip": {
        "title": "IP-adress to StecaGrid Inverter",
        "type": "string",
        "required": true
      },
      "Port": {
        "title": "Port to access StecaGrid Inverter",
        "type": "string",
        "required": true
      },
      "UpdateTime": {
        "title": "Time in secondes between updates",
        "type": "number",
        "required": true,
        "default": 5
      },
      "MaxProduction": {
        "title": "Max production in W",
        "type": "number",
        "required": true,
        "default": 10000
      },  
      "ViewElectricPowerProduction": {
        "title": "View electric power production (only works in Eve app)",
        "type": "boolean",
        "required": false,
        "default": false
      }, 
      "Debug": {
        "title": "View debug messages",
        "type": "boolean",
        "required": true,
        "default": false
      },
      "EveLoging": {
        "title": "Active Eve Loging",
        "type": "boolean",
        "required": false,
        "default": false
      }
    }
  }
}
